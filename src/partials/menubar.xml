<MenuBar>
	<Menu name="Othello">
		<Menu name="About Othello" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="New Game" click="new-game"/>
		<Menu name="Reset Game" click="reset-game"/>
		<Menu name="Show&#8230;">
			<Menu name="No Helpers" check-group="game-option" click="option-no-helpers"/>
			<Menu type="divider"/>
			<Menu name="Possibilities" check-group="game-option" click="option-possibilities"/>
			<Menu name="Possibilities &amp; Values" check-group="game-option" click="option-possibilities-values"/>
		</Menu>
		<Menu name="Theme">
			<Menu name="Modern" check-group="game-theme" click="set-theme" arg="modern" is-checked="1"/>
			<Menu name="Classic" check-group="game-theme" click="set-theme" arg="classic"/>
		</Menu>
		<Menu name="Sound Effects" check-group="sound-fx" click="toggle-sound"/>
		<Menu type="divider"/>
		<Menu name="Quit Othello" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="How To Play" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="Output PGN" click="output-pgn"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>